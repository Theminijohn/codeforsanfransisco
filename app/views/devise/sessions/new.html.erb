<div class="row login_form">

  <div class="col-md-4 col-md-offset-4">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

      <div class="form_t">
        Welcome back
      </div>

      <div class="form_element">
        <%= f.email_field :email, class: "codesf-input", placeholder: "Email" %>
      </div>

      <div class="form_element">
        <%= f.password_field :password, class: "codesf-input", placeholder: "Password" %>
      </div>

      <div class="form_element">
        <%= f.submit "Log in", class: "codesf-btn" %>
      </div>

    <% end %>

    <div class="login_dr">
      <div class="pull-left">
        <%= link_to new_user_registration_path do %>
          Register
        <% end %>
      </div>
      <div class="pull-right">
        <%= link_to new_user_password_path do %>
          Password?
        <% end %>
      </div>
      <div class="clearfix"></div>
    </div>

  </div>

</div>